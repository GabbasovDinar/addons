<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record model="ir.module.category" id="module_contract">
            <field name="name">Contract</field>
            <field name="description">Helps you handle your contracts</field>
            <field name="sequence">2</field>
        </record>

        <record id="base.group_contract_author" model="res.groups">
            <field name="name">Author</field>
            <field name="category_id" ref="module_contract"/>
            <field name="comment">The user will have access to create contracts.</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="base.group_contract_worker" model="res.groups">
            <field name="name">Worker</field>
            <field name="category_id" ref="module_contract"/>
            <field name="comment">The user will have access to assign myself available contracts.</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="base.group_contract_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">The user will have an access to the all contracts.</field>
            <field name="category_id" ref="module_contract"/>
            <field name="implied_ids" eval="[(4, ref('base.group_contract_author'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record model="res.users" id="base.user_root">
            <field name="groups_id" eval="[(4,ref('base.group_contract_manager'))]"/>
        </record>

    </data>

    <data noupdate="1">

        <record id="contract_author_rule" model="ir.rule">
            <field name="name">Author Contracts</field>
            <field ref="model_contract" name="model_id"/>
            <field name="domain_force">[('author_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_contract_author'))]"/>
        </record>

        <record id="contract_worker_rule" model="ir.rule">
            <field name="name">Author Contracts</field>
            <field ref="model_contract" name="model_id"/>
            <field name="domain_force">['|', ('worker_id', '=', user.id), ('state', '=', 'published')]</field>
            <field name="groups" eval="[(4, ref('base.group_contract_worker'))]"/>
        </record>

        <record id="contract_manager_rule" model="ir.rule">
            <field name="name">All Contracts</field>
            <field ref="model_contract" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_contract_manager'))]"/>
        </record>

    </data>
</openerp>
